    <!-- 검색  -->
    <select id="getBoard" parameterType="int" resultType="GetBoardRes">
        select article_id, user_id, subject, content, hit, created_at
        from board
        where article_id = #{article_id}
    </select>

    <sql id="search">
        <if test="word != null and word != ''">
            <if test="key == 'subject'">
                subject like concat('%', #{word}, '%') and
            </if>
            <if test="key != 'subject'">
                ${key} = #{word} and
            </if>
        </if>
        true
    </sql>

    <select id="listBoard" parameterType="map" resultType="GetBoardRes">
        select article_id, user_id, subject, hit, created_at
        from board
        where
        <include refid="search"></include>
        order by article_id desc
        limit #{start}, #{listsize}
    </select>

    <!-- 수정 -->
    <update id="modifyBoard" parameterType="ModifyBoardReq">
        update board set subject = #{subject}, content = #{content}
                         where article_id = #{articleId}
    </update>

    <!-- 조회 수 -->
    <update id="updateHit" parameterType="int">
        update board
        set hit = hit + 1
        where article_id = #{articleId}
    </update>

    <!-- 삭제 -->
    <delete id="deleteBoard" parameterType="int">
        delete from board
        where article_id = #{articleId}
    </delete>
